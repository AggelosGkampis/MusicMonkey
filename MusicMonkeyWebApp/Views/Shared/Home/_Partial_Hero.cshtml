<script>
    return;
    const app = new PIXI.Application({ width: 1024, height: 576, transparent: true });
    document.getElementById('testVideo').appendChild(app.view);
    // 1024 576
    function onPlayVideo() {
        const container = new PIXI.Container();
        container.x = app.screen.width / 2;
        container.y = app.screen.height / 2;

        // create a video texture from a path
        const texture = PIXI.Texture.from('https://static.vecteezy.com/system/resources/previews/002/021/350/mp4/of-the-movement-of-light-free-video.mp4');

        // create a new Sprite using the video texture (yes it's that easy)
        const videoSprite = new PIXI.Sprite(texture);
        videoSprite.tint = Math.random() * 0xFFFFFF;


        // Stetch the fullscreen
        videoSprite.width = app.screen.width;
        videoSprite.height = app.screen.height;
        videoSprite.loop = true;

        const thing = new PIXI.Graphics();
        app.stage.addChild(thing);

        thing.lineStyle(0);
        thing.beginFill(0xFFFF0B, 0.5);
        thing.drawCircle(app.screen.width / 2, app.screen.height / 2, 100);
        thing.endFill();

        container.mask = thing;



        const count = 1;

        container.addChild(videoSprite);
        app.stage.addChild(container);
        //app.stage.addChild(videoSprite);
    };

    onPlayVideo();
</script>

